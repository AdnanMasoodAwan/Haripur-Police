<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="@color/LightGrey"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:background="@drawable/inputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UserLaptopName"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/inputs"
            android:padding="10dp"
            android:text="Laptop Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/UserLaptopImage"
            android:layout_width="624dp"
            android:layout_height="466dp"
            android:layout_below="@id/UserLaptopName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputs"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/UserLaptopModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserLaptopImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:text="Laptop Model"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UserLaptopRam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserLaptopModel"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:text="Laptop Ram"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UserLaptopHardisk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserLaptopRam"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:text="Laptop Hardisk"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UserLaptopProcessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserLaptopHardisk"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:text="Laptop Processor"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/UserLaptopGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserLaptopProcessor"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:text="Laptop Generation"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UserLaptopOwnerNic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserLaptopGeneration"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:text="Laptop Owner NIC"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
